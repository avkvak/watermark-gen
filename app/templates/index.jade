doctype html
html(lang="ru-Ru")
	head
		title watermark service
		meta(charset="utf-8")
		meta(http-equiv="X-UA-Compatible", content="IE=edge")
		meta(name="viewport",content="width=device-width, initial-scale=1.0")
		//seo
		meta(name="description",content="сервис по изготовлению водяных знаков")
		meta(name="author",content="Квашук Андрей, Ильина ЛадаK, Заславская Анастасия, Минка Дмитирий")
		meta(name="keywords",content="watermark")
		//favicon
		link(rel="shortcut icon", href="favicon.ico", type="image/x-icon")
		link(rel="icon", href="favicon.ico", type="image/x-icon")

		<!-- build:css css/vendor.min.css -->
		// bower:css
		// endbower
		<!-- endbuild -->

		//html5 for ie8
		<!--[if lt IE 9]>
		script(src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js")
		script(src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js")
		<![endif]-->
		
		<!-- build:css css/main.min.css -->
		link(rel="stylesheet", href="css/main.css")
		<!-- endbuild -->

		body
			main.wrapper
					div.container.clearfix
						//Основной контент
						section.center-content.clearfix
							//Рабочая область
							section.workspace
								h1.workspace-title Генератор водяных знаков
								div.workspace-inner.clearfix
									//область для загрузки каринки, видима при загрузке картинки
									div.workspase__uploud-image
										//область для водяного знака, видима уже при его загрузке
										div.workspase_wotermark-wrap
											div.workspase__wotermark
							//Панель управления
							aside.controllers
								h2.controllers-title Настройки
								form(action="", method="POST").controllers-form
									//Раздел загрузки файлов
									div.uploud.block
										div.input-form
											div.title-label Исходное изображение
											label.input-label(for="input-image")
												input.input(type="text", name="image", id="input-image", value="Загрузите изображение", disabled)
												span.upload-img
											label(for="input-upload-img")
											input.upload-btn(type="file",name="upload-img",id="input-upload-img")
										div.input-form
											div.title-label Водяной знак
											label.input-label(for="input-watermark")
												input.input(type="text", name="watermark", id="input-watermark" value="Загрузите водяной знак", disabled)
												span.upload-img
											label(for="input-upload-watermark")
											input.upload-btn(type="file",name="upload-watermark",id="input-upload-watermark")
									//Раздел положение wotermark
									div.position.block
										div.position-row.clearfix
											label.position-label Положение
											//Кнопки преключения режима нормальный/замостить
											div.position__type-button-wrap
												a(href="#").position__type-button.position__type-button_tile
												a(href="#").position__type-button.position__type-button_normal.position__type-button_normal-active
										div.position-row.clearfix
											//Окно визаульного позиционирования.
											div.position__grid-wrap
												//Cетка
												div.grid#grid
													div.top-row
														div.left
														div.center
														div.right
													div.middle-row
														div.left
														div.center
														div.right
													div.bottom-row
														div.left
														div.center
														div.right
											//Кнопки управления
											div.position__controller-wrap
												div.position__controller_X
													span.position__controller_X-description X
													input.position__controller_X-input(type="text",value="00")
													a.position__controller_X-up(href="#")
													a.position__controller_X-down(href="#")
												div.position__controller_Y
													span.position__controller_Y-description Y
													input.position__controller_Y-input(type="text",value="00")
													a.position__controller_Y-up(href="#")
													a.position__controller_Y-down(href="#")
									//Раздел с прозрачностью
									div.opacity.block
										label.opasity__label Прозрачность
										div.opasity__slider-wrap
											div.opasity-slider
												input(type="range" min="0" max="1" step="0.05" value="1")
									//Раздел с кнопками
									div.buttons
										div.buttons-wrap.clearfix
											button.btn.btn-res(type="reset",value="Сброс") Сброс
											button.btn(type="submit",value="скачать") Скачать
			footer.page-footer
				div.page-footer-copyright (с)2015, Это наш сайт, пожалуйста, не воруйте и не копируйте его
		



		script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js")

